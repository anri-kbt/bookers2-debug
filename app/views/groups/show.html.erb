<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to(@group.user) do %>
            <%= image_tag @group.user.get_profile_image, size:"100x100" %><br>
            <% end %>
          </td>
          <td><%= @group.name %></td>
          <td><%= @group.introduction %></td>
            <% if @group.user == current_user %>
            <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success" %></td>
            <% end %>
          </td>
        </tr>
      </table>
  	</div>
  </div>
</div>